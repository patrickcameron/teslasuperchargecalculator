{
    "name": "Supercharge Tracker",
    "version": "1.0",
    "description": "Track your Tesla Supercharger use.",
    "manifest_version": 2,
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.tesla.com/teslaaccount/payment-history*",
                "https://*.tesla.com/*/teslaaccount/payment-history*"
            ],
            "css": [
                "/lib/chart.min.css",
                "style.css"
            ],
            "js": [
                "/lib/chart.min.js",
                "/lib/chartjs-plugin-datalabels.min.js",
                "/lib/currency.min.js",
                "/lib/vue.min.js",
                "contentScript.js"
            ]
        }
    ],
    "web_accessible_resources": ["template.html"]
}